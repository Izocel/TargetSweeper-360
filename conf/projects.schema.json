{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Target Sweeper 360 Project Configuration",
    "description": "Schema for Target Sweeper 360 project configuration files",
    "type": "object",
    "properties": {
        "generations": {
            "type": "array",
            "description": "Array of target sweep generation configurations",
            "items": {
                "type": "object",
                "properties": {
                    "ProjectName": {
                        "type": "string",
                        "description": "Human-readable project identifier"
                    },
                    "Target": {
                        "type": "object",
                        "description": "Target location definition",
                        "properties": {
                            "longitude": {
                                "type": "number",
                                "description": "Target longitude coordinate"
                            },
                            "latitude": {
                                "type": "number",
                                "description": "Target latitude coordinate"
                            },
                            "name": {
                                "type": "string",
                                "description": "Display name for the target"
                            }
                        },
                        "required": [
                            "longitude",
                            "latitude",
                            "name"
                        ]
                    },
                    "Sweeper": {
                        "type": "object",
                        "description": "Sweep pattern configuration parameters",
                        "properties": {
                            "radiusStep": {
                                "type": "number",
                                "description": "Distance between concentric circles (meters)\n\nThis defines the spacing between each sweep radius.\n\nExample: 10 meters means each circle is 10m apart.",
                                "minimum": 1
                            },
                            "maxRadius": {
                                "type": "number",
                                "description": "Maximum sweep radius from target (meters)\n\nThis defines the outer limit from the target area.\n\nExample: 500 meters means the sweep extends 500m from the target.",
                                "minimum": 1
                            },
                            "angleStepMOA": {
                                "type": "number",
                                "description": "Angular step size in Minutes of Angle (MOA - 1/60th of a degree)\n\nThis defines the angular resolution of the sweep pattern.\n\nExample: 300 MOA corresponds to 5 degrees (300/60)",
                                "minimum": 1
                            },
                            "format": {
                                "type": "string",
                                "description": "Label format for sweep points:\n\n - TACTICAL: NNE-050-1500-0025\n\n - DESCRIPTIVE: 50m NNE @1h (25min/1500MOA)\n\n - CLOCK_NAVIGATION: R50 @01:00 NNE (30Â°/1500MOA)\n\n - COMPACT_GRID: NNE50-00:25-1500\n\n - BEARING_RANGE: BRG030-RNG050-MOA1500-T0025\n\n - SEARCH_PATTERN: SP-NNE-050m-00:25-1500MOA\n\n - AVIATION: RADIAL030/050M/1500/0025Z\n\n - SIMPLE: NNE 50m @00:25 (1500MOA)",
                                "enum": [
                                    "TACTICAL",
                                    "DESCRIPTIVE",
                                    "CLOCK_NAVIGATION",
                                    "COMPACT_GRID",
                                    "BEARING_RANGE",
                                    "SEARCH_PATTERN",
                                    "AVIATION",
                                    "SIMPLE"
                                ]
                            }
                        },
                        "required": [
                            "radiusStep",
                            "maxRadius",
                            "angleStepMOA",
                            "format"
                        ]
                    }
                },
                "required": [
                    "ProjectName",
                    "Target",
                    "Sweeper"
                ]
            }
        }
    },
    "required": [
        "generations"
    ]
}